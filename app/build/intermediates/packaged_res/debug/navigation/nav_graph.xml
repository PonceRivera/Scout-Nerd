<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.scoutnerd.app.ui.home.HomeFragment"
        android:label="Events"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_teamListFragment"
            app:destination="@id/teamListFragment" />
        <action
            android:id="@+id/action_homeFragment_to_matchScoutFragment"
            app:destination="@id/matchScoutFragment" />
        <action
            android:id="@+id/action_homeFragment_to_pitScoutFragment"
            app:destination="@id/pitScoutFragment" />
        <action
            android:id="@+id/action_homeFragment_to_analyticsFragment"
            app:destination="@id/analyticsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_eventSelectionFragment"
            app:destination="@id/eventSelectionFragment" />
    </fragment>

    <fragment
        android:id="@+id/teamListFragment"
        android:name="com.scoutnerd.app.ui.team.TeamListFragment"
        android:label="Teams"
        tools:layout="@layout/fragment_team_list">
        <argument
            android:name="eventKey"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/matchScoutFragment"
        android:name="com.scoutnerd.app.ui.scout.MatchScoutFragment"
        android:label="Match Scout"
        tools:layout="@layout/fragment_match_scout">
        <action
            android:id="@+id/action_matchScoutFragment_to_analyticsFragment"
            app:destination="@id/analyticsFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="false"/>
    </fragment>

    <fragment
        android:id="@+id/pitScoutFragment"
        android:name="com.scoutnerd.app.ui.scout.PitScoutFragment"
        android:label="Pit Scout"
        tools:layout="@layout/fragment_pit_scout" />

    <fragment
        android:id="@+id/analyticsFragment"
        android:name="com.scoutnerd.app.ui.analytics.AnalyticsFragment"
        android:label="Analytics"
        tools:layout="@layout/fragment_analytics" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.scoutnerd.app.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/eventSelectionFragment"
        android:name="com.scoutnerd.app.ui.event.EventSelectionFragment"
        android:label="Select Event"
        tools:layout="@layout/fragment_event_selection" />
</navigation>
